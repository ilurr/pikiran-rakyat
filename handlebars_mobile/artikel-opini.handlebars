<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body>
	<!-- header -->
	{{> header}}
	
	<!-- nav -->
	{{> nav}}
	
	<!-- content -->
	<div class="row clearfix">
		<div class="container clearfix">

			<!-- ads top -->
			{{> ads_top}}

			{{> read_breadcrumb channel=read.opini.article}}

			<!-- header -->
			<section class="read__header clearfix">
				{{> read_header channel=read.opini.article}}
			</section>

			<!-- content -->
			<article class="read__content clearfix">
				{{{read.opini.article.content}}}
			</article>

			{{> read_paging}}

			<!-- tagging -->
			<section class="read__tagging mt2 clearfix">
				<h3 class="title6"><span>Tags</span></h3>
				{{> read_tagging channel=read.opini.article}}
			</section>

			<!-- related -->
			<section class="read__comment mt2 clearfix">
				<h3 class="title6"><span>Artikel Terkait</span></h3>
				{{> read_related channel=read.opini.article}}
			</section>

			<!-- comment -->
			<section class="read__comment mt2 clearfix">
				<h3 class="title6"><span>Komentar</span></h3>
				{{> read_comment}}
			</section>

			<!-- latests -->
			<section class="latest latest--article mt2 clearfix">
				<h3 class="title6"><span>Terkini</span></h3>
				<div class="latest__wrap">
					{{> latest_read channel=WP.Latest total=10 index_start=20 index_end=30}}
				</div>
			</section>

			<!-- ads square -->
			<div class="ads mt2 clearfix">
				{{> ads_square}}
			</div>

			<!-- most -->
			<section class="most mt2 clearfix">
				<h3 class="title"><span>Terpopuler</span></h3>
				<div class="most__wrap">
					{{> most channel=Most total=10 index_start=0 index_end=10}}
				</div>
			</section>

			<!-- network -->
			<section class="network network--article mt2 clearfix">
				<h3 class="title"><span>Jawa Barat Network</span></h3>
				<div class="network__wrap js--network">
					{{> belt_network channel=WP.Sorotan total=8 index_start=0 index_end=8}}
				</div>
			</section>

			<!-- ads square -->
			<div class="ads mt2 clearfix">
				{{> ads_square}}
			</div>

		</div>
	</div>
	
	<!-- footer -->
	{{> footer}}

	{{> js}}
	
</body>
</html>
