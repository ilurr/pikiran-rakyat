{{#if channel}}
<!-- gallery -->
<div class="gallery__list js--gallery">
	<a href="https://asset.kompas.com/crop/900x675/smart/data/todaysphoto/{{channel.img}}" class="gallery__item" title="{{channel.title}}">
		<div class="gallery__cover">
			<img src="https://asset.kompas.com/crop/900x675/smart/data/todaysphoto/{{channel.img}}" alt="{{channel.title}}">
			<div class="photos__latest__box">
				<span class="icon icon-photo"></span>
				<div class="photos__count"><span>12</span>foto</div>				
			</div>
		</div>
	</a>
	{{#each channel.img_other}}
	<a href="https://asset.kompas.com/crop/900x675/smart/data/todaysphoto/{{img}}" class="gallery__item" title="{{title}} ({{uppercase author}})"></a>
	{{/each}}
</div>
{{/if}}
