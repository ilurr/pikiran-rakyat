<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body>
	<!-- header -->
	{{> header}}
	
	<!-- nav -->
	{{> nav}}
	
	<!-- content -->
	<div class="row clearfix">
		<div class="container clearfix">
					
			<!-- ads top -->
			{{> ads_top}}

			<h3 class="title4"><span>Kolom</span></h3>

			<!-- headline -->
			<section class="hl clearfix">
				{{> headline_opini channel=WP.Opini total=1 index_start=0 index_end=1}}
			</section>

			<!-- latest -->
			<section class="latest clearfix">
				<h3 class="title"><span>Berita Terkini</span></h3>
				<div class="latest__wrap">
					{{> latest_opini channel=WP.Opini total=10 index_start=0 index_end=20}}
				</div>

				<div class="latest__more clearfix">
					<a href="all.html" class="latest__button">Lihat Semua</a>
				</div>
			</section>

			<!-- ads square -->
			<div class="ads mt2 clearfix">
				{{> ads_square}}
			</div>
			
		</div>
	</div>
	
	<!-- footer -->
	{{> footer}}

	{{> js}}
	
</body>
</html>
