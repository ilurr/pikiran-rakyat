<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body>
	<!-- header -->
	{{> header}}
	
	<!-- nav -->
	{{> nav}}
	
	<!-- content -->
	<div class="row clearfix">
		<div class="container clearfix">
					
			<!-- ads top -->
			{{> ads_top}}

			<!-- opinion -->
			<section class="opinion clearfix">
				<h3 class="title"><span>Kolom</span></h3>
				<div class="opinion__wrap">
					{{> opinion_header channel=WP.Opini.[0]}}
				</div>
			</section>

			<!-- latest -->
			<section class="latest mt3 clearfix">
				<h3 class="title"><span>Berita Terkini</span></h3>
				<div class="latest__wrap">
					{{> latest channel=WP.Opini total=10 index_start=0 index_end=20}}
				</div>

				{{> paging}}
			</section>

			<!-- ads square -->
			<div class="ads mt2 clearfix">
				{{> ads_square}}
			</div>
					
		</div>
	</div>
	
	<!-- footer -->
	{{> footer}}

	{{> js}}
	
</body>
</html>
