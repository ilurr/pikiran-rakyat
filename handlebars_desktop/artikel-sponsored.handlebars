<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body>
	<!-- header -->
	{{> header}}
	
	<!-- ads skin -->
	{{> ads_skin}}
	
	<!-- content -->
	<div class="row clearfix">
		<div class="container clearfix">
			<div class="col-offset-fluid clearfix">
				<div class="col-bs12-12">
					
					<!-- ads top -->
					{{> ads_top}}
					
					<!-- advertorial -->
					{{> ads_title}}

				</div>
				
				<div class="col-bs12-8">
				
					<!-- header -->
					<section class="read__header clearfix">
						{{> read_header channel=read.news.article}}
					</section>
					
					<div class="read__article clearfix js--tower-parent">
						<div class="col-bs12-3 col-offset-0">
							{{> ads_tower}}
						</div>
						<div class="col-bs12-9">
						
							<!-- content -->
							<article class="read__content clearfix">
								{{{read.news.article.content}}}
							</article>
							
							{{> read_paging}}
							
 							<!-- tagging -->
							<section class="read__tagging mt3 clearfix">
								<h3 class="title6"><span>Tags</span></h3>
								{{> read_tagging channel=read.news.article}}
							</section>
							
 							<!-- related -->
							<section class="read__comment mt3 clearfix">
								<h3 class="title6"><span>Artikel Terkait</span></h3>
								{{> read_related channel=read.news.article}}
							</section>
							
							<!-- comment -->
							<section class="read__comment mt3 clearfix">
								<h3 class="title6"><span>Komentar</span></h3>
								{{> read_comment}}
							</section>
							
							<!-- latests -->
							<section class="latest latest--article mt3 clearfix">
								<h3 class="title6"><span>Terkini</span></h3>
								<div class="latest__wrap">
									{{> latest_read channel=WP.Latest total=10 index_start=20 index_end=30}}
								</div>
							</section>
							
						</div>
					</div>
					
					
				</div>
				<div class="col-bs12-4">
				
					<!-- ads square -->
					<div class="ads mt3 clearfix">
						{{> ads_square}}
					</div>
					
					<!-- ads square -->
					<div class="ads mt3 clearfix">
						{{> ads_square}}
					</div>
					
					<!-- most -->
					<section class="most mt2 clearfix">
						<h3 class="title"><span>Terpopuler</span></h3>
						<div class="most__wrap">
							{{> most channel=Most total=10 index_start=0 index_end=10}}
						</div>
					</section>
					
					<!-- network -->
					<section class="row mt2 clearfix">
						<h3 class="title5"><span>Jawa Barat Network</span></h3>
						<div class="network__sidebar js--network-sidebar">
							{{> network_sidebar channel=WP.Sorotan total=8 index_start=0 index_end=8}}
						</div>
					</section>
					
					<!-- ads square -->
					<div class="ads mt3 clearfix">
						{{> ads_square}}
					</div>
					
					<!-- ads square -->
					<div class="ads mt3 clearfix">
						{{> ads_square}}
					</div>
					
				</div>
			</div>
		</div>
	</div>
	
	<!-- footer -->
	{{> footer}}

	<!-- ads horizontal -->
	{{> ads_horizontal}}

	{{> js}}
	
</body>
</html>
