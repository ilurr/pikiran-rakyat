<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body>
	<!-- header -->
	{{> header}}
	
	<!-- ads skin -->
	{{> ads_skin}}
	
	<!-- content -->
	<div class="row clearfix">
		<div class="container clearfix">
			<div class="col-offset-fluid clearfix">
				<div class="col-bs12-12">
					
					<!-- ads top -->
					{{> ads_top}}
					
					{{> read_breadcrumb channel=read.surat.article}}

				</div>
				
				<div class="col-bs12-8">
				
					<!-- header -->
					<section class="read__header clearfix">
						{{> read_header channel=read.surat.article}}
					</section>
					
					<div class="read__article clearfix js--tower-parent">
						<div class="col-bs12-3 col-offset-0">
							{{> ads_tower}}
						</div>
						<div class="col-bs12-9">
						
							<!-- content -->
							<article class="read__content clearfix">
								{{{read.surat.article.content}}}
							</article>
							
							{{> mail_reply}}
														
						</div>
					</div>
					
					
				</div>
				<div class="col-bs12-4">
				
					<!-- ads square -->
					<div class="ads mt3 clearfix">
						{{> ads_square}}
					</div>
					
					<!-- ads square -->
					<div class="ads mt3 clearfix">
						{{> ads_square}}
					</div>
					
					<!-- most -->
					<section class="most mt2 clearfix">
						<h3 class="title"><span>Terpopuler</span></h3>
						<div class="most__wrap">
							{{> most channel=Most total=10 index_start=0 index_end=10}}
						</div>
					</section>
					
				</div>
			</div>
		</div>
	</div>
	
	<!-- footer -->
	{{> footer}}

	<!-- ads horizontal -->
	{{> ads_horizontal}}

	{{> js}}
	
</body>
</html>
